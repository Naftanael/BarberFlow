rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer pessoa leia os dados, mas bloqueia a escrita.
    // Isso é útil para visualização e desenvolvimento, mas para produção
    // você precisará de regras baseadas em autenticação.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Apenas usuários autenticados podem escrever
    }
  }
}
